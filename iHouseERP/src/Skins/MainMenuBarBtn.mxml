<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fx="http://ns.adobe.com/mxml/2009"
		width="100%" height="35">
	<fx:Metadata>[HostComponent("spark.components.RadioButton")]</fx:Metadata>
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
		<s:State name="upAndSelected"/>
		<s:State name="overAndSelected"/>
		<s:State name="downAndSelected"/>
		<s:State name="disabledAndSelected"/>
	</s:states> 

	<s:Rect left="0" top="0"  right="0" height="100%">    
		<s:fill>
			<s:SolidColor color.up="#606060"   color.upAndSelected="#FF7F27" 
						  color.over="#FF7F27" color.overAndSelected="#FF7F27"
						  color.down="#FF7F27" color.downAndSelected="#FF7F27"/>
		</s:fill>
	</s:Rect>
	<s:RichText id="labelDisplay" left="5" right="5" y="9" width="{this.width-4}" fontFamily="宋体" fontSize="14"
				color.up="#b2b2b2"   color.upAndSelected="#000000" 
				color.over="#000000" color.overAndSelected="#000000"
				color.down="#000000" color.downAndSelected="#000000"
			    textAlign="center"/> 	
</s:Skin>
