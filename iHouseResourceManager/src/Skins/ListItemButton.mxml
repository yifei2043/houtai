<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fx="http://ns.adobe.com/mxml/2009"
		width="100%" height="100%" alpha="1">
	<fx:Metadata>[HostComponent("spark.components.RadioButton")]</fx:Metadata>
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
		<s:State name="upAndSelected"/>
		<s:State name="overAndSelected"/>
		<s:State name="downAndSelected"/>
		<s:State name="disabledAndSelected"/>
	</s:states> 

	<s:Rect left="0" top="0"  right="0" height="100%">    
		<s:fill>
			<s:SolidColor color.up="#ffffff"   color.upAndSelected="#ffffff" 
						  color.over="#58A3F3" color.overAndSelected="#58A3F3"
						  color.down="#58A3F3" color.downAndSelected="#58A3F3" />
		</s:fill>
	</s:Rect>
	<s:RichText id="labelDisplay" left="5" right="5" y="5" width="{this.width-4}" fontFamily="宋体" fontSize="12"
				color.up="#000000"   color.upAndSelected="#000000" 
				color.over="#ffffff" color.overAndSelected="#ffffff"
				color.down="#ffffff" color.downAndSelected="#ffffff" 
			    textAlign="center"/> 	
</s:Skin>
